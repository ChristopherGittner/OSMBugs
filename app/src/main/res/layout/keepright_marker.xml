<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bonuspack_bubble"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgState"
                android:layout_marginLeft="8dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/keepright_zap_ignored" />

            <ImageView
                android:id="@+id/imgBrowse"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_browse" />

            <ImageView
                android:id="@+id/imgSave"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_save" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:indeterminate="true"
                android:visibility="gone" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_share" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Title"
            android:textColor="@color/bubble_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxWidth="300dp"
            android:text="Description"
            android:textColor="@color/bubble_text_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edtxtComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/bubble_text_color"
            android:textColorHint="@color/bubble_text_color"
            android:backgroundTint="@color/bubble_text_color"
            android:layout_marginTop="8dp"
            android:hint="@string/comment" />

    </LinearLayout>

</LinearLayout>
