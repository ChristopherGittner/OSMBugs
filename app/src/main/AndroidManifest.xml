<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.gittner.osmbugs" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
	    android:name=".OsmbugsApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.OsmBugsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SettingsActivity" />
        <activity
            android:name=".activities.AddMapdustBugActivity"
            android:label="@string/title_activity_add_mapdust_bug" />
        <activity
            android:name=".activities.AddOpenstreetmapNoteActivity"
            android:label="@string/title_activity_add_openstreetmap_note" />
	    <activity android:name=".activities.KeeprightEditActivity"/>
	    <activity android:name=".activities.OsmoseEditActivity"/>
	    <activity android:name=".activities.MapdustEditActivity"/>
	    <activity android:name=".activities.OsmNoteEditActivity"/>
	    <activity android:name="org.acra.CrashReportDialog"
	              android:theme="@style/Theme.Dialog"
	              android:launchMode="singleInstance"
	              android:excludeFromRecents="true"
	              android:finishOnTaskLaunch="true" />
    </application>

</manifest>
